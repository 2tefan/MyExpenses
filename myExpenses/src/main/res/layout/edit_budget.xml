<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:importantForAutofill="noExcludeDescendants"
    tools:layout_height="wrap_content"
    tools:targetApi="o">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_input_dialog_side"
    android:paddingRight="@dimen/padding_input_dialog_side"
    android:paddingTop="8dp">

    <!-- label (only custom) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <EditText
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/title"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- code (only custom) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <EditText
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/description"
            android:inputType="textCapCharacters"
            android:maxLength="3"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/OnboardingInputLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:labelFor="@+id/Amount"
        android:text="@string/budget_allocated_amount"/>

    <org.totschnig.myexpenses.ui.AmountInput
        android:id="@+id/Amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:withTypeSwitch="false"
        android:layout_marginLeft="-4dp"
        android:layout_marginStart="-4dp"/>

    <TextView
        style="@style/OnboardingInputLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/Type"
        android:text="@string/type"/>

    <Spinner
        android:id="@+id/Type"
        style="@style/OnboardingSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:prompt="@string/currency"/>
</LinearLayout>
</ScrollView>