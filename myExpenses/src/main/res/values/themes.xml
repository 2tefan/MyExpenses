<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Launch" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="dropdownListPreferredItemHeight">48sp</item>
        <item name="drawerBackground">@color/drawerBackgroundDark</item>
        <item name="pageMargin">@drawable/pagermargin_white</item>
        <item name="drawerWidth">260sp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorContainerOuter">32dp</item>
        <item name="colorContainerInner">16dp</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
        <item name="account_color_indicator_diameter">@dimen/AccountColorDiameterBase</item>
        <item name="category_color_indicator_diameter">@dimen/CategoryColorDiameterBase</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_dark</item>
        <item name="md_color_button_text">?colorAccent</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
    </style>

    <style name="DarkBackground">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="LightBackground">
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="EditDialog" parent="@style/Theme.MaterialComponents.DayNight.DialogWhenLarge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
        <item name="category_color_indicator_diameter">@dimen/CategoryColorDiameterBase</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_dark</item>
        <item name="cardBackground">#555555</item>
        <item name="md_color_button_text">?colorAccent</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
    </style>

    <style name="MyTheme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
       <!-- <item name="alertDialogTheme">@style/MyAlertDialogThemeLight</item>-->
    </style>

    <style name="Onboarding" parent="@style/SuwThemeMaterial">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_color_button_text">?colorAccent</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
    </style>

    <style name="Theme.AppCompat.Dialog.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AmountSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorIncome</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorExpense</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/colorExpense</item>
    </style>
</resources>