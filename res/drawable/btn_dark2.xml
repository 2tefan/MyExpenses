<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape>
          <gradient
              android:startColor="#ffd34a"
              android:endColor="#e99c00"
              android:angle="270" />
          <corners android:radius="10dp" />
        </shape>
      </item>
      <item>
        <bitmap android:src="@drawable/triangle"
            android:gravity="top|left" />
      </item>
    </layer-list>
  </item>
  <item android:state_focused="true">
    <layer-list>
      <item>
        <shape>
          <gradient
              android:startColor="#ff982a"
              android:endColor="#eb6000"
              android:angle="270" />
          <corners android:radius="10dp" />
        </shape>
      </item>
      <item>
        <bitmap android:src="@drawable/triangle"
            android:gravity="top|left" />
      </item>
    </layer-list>
  </item>
  <item>
    <layer-list>
      <item>
        <shape>
          <gradient
              android:startColor="#606060"
              android:endColor="#303030"
              android:angle="270" />
          <corners android:radius="10dp" />
        </shape>
      </item>
      <item>
        <bitmap android:src="@drawable/triangle"
            android:gravity="top|left" />
      </item>
    </layer-list>
  </item>
</selector>